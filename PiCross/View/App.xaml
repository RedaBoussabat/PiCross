<Application x:Class="View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:View"
             xmlns:windows="clr-namespace:View"
             xmlns:viewmodel ="clr-namespace:ViewModel;assembly=ViewModel">
  
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewmodel:WelcomeViewModel}">
            <windows:WelcomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodel:GameViewModel}">
            <windows:GameWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodel:PuzzleSelectorViewModel}">
            <windows:PuzzleSelector />
        </DataTemplate>

    </Application.Resources>
</Application>
